  "$id": "http://example.com/root.json",
  "type": "object",
  "title": "The Root Schema",
  "required": [
    "author",
    "description",
    "version",
    "permalink",
    "scidata"
],
  "properties": {
    "@context": {
      "$id": "#/properties/@context",
      "type": "array",
      "title": "The @context Schema",
      "items": {
        "$id": "#/properties/@context/items",
        "type": "string",
        "default": ["https://stuchalk.github.io/scidata/contexts/scidata.jsonld"]
      }
    },
    "@id": {
      "$id": "#/properties/@id",
      "type": "string"
    },
    "uid": {
      "$id": "#/properties/uid",
      "type": "string",
      "examples": [
        "scidata/example/ri"
      ]
    },
    "title": {
      "$id": "#/properties/title",
      "type": "string",
      "examples": [
        "Hydrochloric acid refractive index"
      ]
    },
    "author": {
      "$id": "#/properties/author",
      "type": "array",
      "title": "The Author Schema",
      "items": {
        "$id": "#/properties/author/items",
        "type": "object",
        "title": "The Items Schema",
        "required": [
          "@id",
          "@type",
          "name"
        ],
        "properties": {
          "@id": {
            "$id": "#/properties/author/items/properties/@id",
            "type": "string",
            "default": "author/1/"
          },
          "@type": {
            "$id": "#/properties/author/items/properties/@type",
            "type": "string",
            "enum": ["dc:creator"]
          },
          "name": {
            "$id": "#/properties/author/items/properties/name",
            "type": "string",
            "examples": [
              "Stuart Chalk"
            ]
          },
          "organization": {
            "$id": "#/properties/author/items/properties/organization",
            "type": "string",
            "examples": [
              "University of North Florida"
            ]
          },
          "email": {
            "$id": "#/properties/author/items/properties/email",
            "type": "string",
            "examples": [
              "schalk@unf.edu"
            ]
          },
          "orcid": {
            "$id": "#/properties/author/items/properties/orcid",
            "type": "string",
            "examples": [
              "0000-0002-0703-7776"
            ]
          }
        }
      }
    },
    "description": {
      "$id": "#/properties/description",
      "type": "string"
    },
    "publisher": {
      "$id": "#/properties/publisher",
      "type": "string",
      "examples": [
        "Chalk Group, Department of Chemistry, University of North Florida"
      ]
