        "examples": [
          "Refractive index",
          "Example Data"
        ]
      }
    },
    "starttime": {
      "$id": "#/properties/starttime",
      "type": "string",
      "format": "date-time",
      "examples": [
        "2015-04-15T09:50:13-05:00"
      ]
