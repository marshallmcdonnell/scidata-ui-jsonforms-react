{
  "type": "VerticalLayout",
  "elements": [
    {
      "type": "Control",
      "label": "JSON-LD Contexts",
      "scope": "#/properties/@context"
    },
    {
      "type": "Group",
      "label": "Unit Definition",
      "elements": [
        {
          "type": "Control",
          "label": "ID for Unit",
          "scope": "#/properties/@id"
        },
        {
          "type": "Control",
          "label": "Unit of Measure",
          "scope": "#/properties/unitstr"
        },
        {
          "type": "Control",
          "label": "Internal / External Reference URI to a Unit of Measure",
          "scope": "#/properties/unitref"
        },
        {
          "type": "Control",
          "label": "Name of the Unit",
          "scope": "#/properties/name"
        },
        {
          "type": "Control",
          "label": "Unit System that Unit is part of",
          "scope": "#/properties/unitsystem"
        },
        {
          "type": "Control",
          "label": "External Reference URI to Unit System that Unit is part of",
          "scope": "#/properties/unitsystemref"
        },
        {
          "type": "Control",
          "label": "Quantity that Unit measures",
          "scope": "#/properties/quantity"
        },
        {
          "type": "Control",
          "label": "External Reference URI to Quantity that Unit measures",
          "scope": "#/properties/quantityref"
        },
        {
          "type": "Control",
          "label": "Unit Abreviation",
          "scope": "#/properties/abbrev"
        },
        {
          "type": "Control",
          "label": "Unit Symbol",
          "scope": "#/properties/symbol"
        }
      ]
    },
    {
      "type": "Group",
      "label": "Target SI Unit (Method 1)",
      "elements": [
        {
          "type": "Control",
          "label": "The SI Unit",
          "scope": "#/properties/siunitstr"
        },
        {
          "type": "Control",
          "label": "External Reference URI to the SI Unit",
          "scope": "#/properties/siunitref"
        },
        {
          "type": "Control",
          "label": "SI Unit Prefix",
          "scope": "#/properties/prefix"
        },
        {
          "type": "Control",
          "label": "SI Unit Power",
          "scope": "#/properties/power"
        }
      ]
    },
    {
      "type": "Group",
      "label": "Conversion Factor Section",
      "elements": [
        {
          "type": "Control",
          "label": "External Reference URI to the Conversion Factor",
          "scope": "#/properties/factorref"
        },
        {
          "type": "Control",
          "label": "Conversion Factor (Method 1)",
          "scope": "#/properties/factor"
        },
        {
          "type": "Group",
          "label": "Conversion Factor (Method 2)",
          "elements": [
            {
              "type": "Control",
              "label": "From Unit from which the conversion is done",
              "scope": "#/properties/fromunit"
            },
            {
              "type": "Control",
              "label": "To Unit to which the conversion is done",
              "scope": "#/properties/tounit"
            },
            {
              "type": "Control",
              "label": "Value to be added to the 'From Unit' value",
              "scope": "#/properties/addend"
            },
            {
              "type": "Control",
              "label": "Value to be subtracted to the 'From Unit' value",
              "scope": "#/properties/subtrahend"
            },
            {
              "type": "Control",
              "label": "Value to multiply the 'From Unit' value by",
              "scope": "#/properties/divisor"
            },
            {
              "type": "Control",
              "label": "Value that the 'From Unit' is to be subtracted from",
              "scope": "#/properties/minuend"
            },
            {
              "type": "Control",
              "label": "Value that the 'From Unit' is to be divided into",
              "scope": "#/properties/dividend"
            },
            {
              "type": "Control",
              "label": "Value to be divided into the 'From Unit' value",
              "scope": "#/properties/divisor"
            },
            {
              "type": "Control",
              "label": "Is the conversion factor an exact number?",
              "scope": "#/properties/exact"
            }
          ]
        }
      ]
    },
    {
      "type": "Group",
      "label": "Target SI Unit (Method 2)",
      "elements": [
        {
          "type": "Control",
          "label": "SI Unit",
          "scope": "#/properties/siunit"
        }
      ]
    },
    {
      "type": "Group",
      "label": "Conversion to Target SI Unit",
      "elements": [
        { 
          "type": "Control",
          "label": "Description or definition of Unit in scientific notation",
          "scope": "#/properties/unitinsi"
        }
      ]
    }
  ]
}
            

