{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Dataset Schema",
  "description": "JSON schema for scientific datasets",
  "type": "object",
  "definitions": {
    "parameterValue_def": {
      "type": "object",
      "properties": {
        "@id": { "type": "string" },
        "scope": { "$ref": "parameter.json#/properties/scope" },
        "quantity": { "$ref": "parameter.json#/properties/quantity" },
        "quantityref": { "$ref": "parameter.json#/properties/quantityref" },
        "property": { "$ref": "parameter.json#/properties/property" },
        "propertyref": { "$ref": "parameter.json#/properties/propertyref" },
        "value": { "$ref": "parameter.json#/properties/value" }
      }
    }
  },
  "properties": {
    "@context": {
      "$ref": "context.json#/@context",
      "default": [
        "http://stuchalk.github.io/scidata/contexts/scidata_dataset.jsonld"
      ]
    },
    "@id": {
      "type": "string",
      "default": ""
    },
    "source": { "type": "string" },
    "datapoint": { 
      "type": "array",
      "items": { "$ref": "#/definitions/parameterValue_def" }
    }
  }
}